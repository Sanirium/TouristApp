<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TouristApp.Views.RouteDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:TouristApp.ViewModels"
    Title="Детали маршрута">

    <ScrollView>
        <VerticalStackLayout
        Padding="20"
        Spacing="15">

            <Label Text="Название" FontAttributes="Bold" />
            <Entry Text="{Binding Route.Name}" Placeholder="Введите название" />

            <Label Text="Описание" FontAttributes="Bold" />
            <Editor Text="{Binding Route.Description}"
              AutoSize="TextChanges"
              Placeholder="Введите описание" />

            <Label Text="Сложность" FontAttributes="Bold" />
            <Picker
          Title="Выберите сложность"
          SelectedItem="{Binding Route.Difficulty}">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:Int32}">
                        <x:Int32>1</x:Int32>
                        <x:Int32>2</x:Int32>
                        <x:Int32>4</x:Int32>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <HorizontalStackLayout
          Spacing="10"
          HorizontalOptions="Center">
                <Button
            Text="Сохранить"
            Command="{Binding SaveCommand}"
            WidthRequest="120" />
                <Button
            Text="Отмена"
            Command="{Binding CancelCommand}"
            WidthRequest="120" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
