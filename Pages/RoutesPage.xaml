<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TouristApp.Views.RoutesPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Маршруты">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Button
      Text="Добавить маршрут"
      Command="{Binding AddRouteCommand}"
      HorizontalOptions="Center" />

        <CollectionView ItemsSource="{Binding Routes}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame
            Margin="5"
            Padding="10"
            HasShadow="True"
            CornerRadius="8">
                        <Grid>
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer
                  Command="{Binding BindingContext.EditRouteCommand, 
                                    Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                  CommandParameter="{Binding .}" />
                            </Grid.GestureRecognizers>

                            <Label FontSize="16">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="{Binding Country}" FontAttributes="Bold"/>
                                        <Span Text=", "/>
                                        <Span Text="{Binding Hotel}"/>
                                        <Span Text=", "/>
                                        <Span Text="{Binding DurationWeeks}"/>
                                        <Span Text=" нед."/>
                                        <Span Text=", "/>
                                        <Span Text="{Binding Price, StringFormat='{}{0:C}'}"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>

                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
