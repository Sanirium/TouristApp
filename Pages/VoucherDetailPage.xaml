<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TouristApp.Views.VoucherDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Детали ваучера">

    <ScrollView>
        <VerticalStackLayout
        Padding="20"
        Spacing="15">

            <Label Text="Код ваучера" FontAttributes="Bold" />
            <Entry
        Text="{Binding Voucher.Code}"
        Placeholder="Введите код" />

            <Label Text="Скидка" FontAttributes="Bold" />
            <Entry
        Text="{Binding Voucher.Discount}"
        Placeholder="Введите размер скидки"
        Keyboard="Numeric" />

            <Label Text="Начало действия" FontAttributes="Bold" />
            <DatePicker
        Date="{Binding Voucher.ValidFrom}"
        Format="dd.MM.yyyy" />

            <Label Text="Окончание действия" FontAttributes="Bold" />
            <DatePicker
        Date="{Binding Voucher.ValidTo}"
        Format="dd.MM.yyyy" />

            <HorizontalStackLayout
          Spacing="10"
          HorizontalOptions="Center">
                <Button
          Text="Сохранить"
          Command="{Binding SaveCommand}"
          WidthRequest="120" />
                <Button
          Text="Отмена"
          Command="{Binding CancelCommand}"
          WidthRequest="120" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
