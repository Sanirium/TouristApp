<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TouristApp.Views.VouchersPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Ваучеры">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Button
      Text="Добавить ваучер"
      Command="{Binding AddVoucherCommand}"
      HorizontalOptions="Center" />

        <CollectionView ItemsSource="{Binding Vouchers}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame
            Margin="5"
            Padding="10"
            HasShadow="True"
            CornerRadius="8">
                        <Grid>
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer
                  Command="{Binding BindingContext.EditVoucherCommand,
                                    Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                  CommandParameter="{Binding .}" />
                            </Grid.GestureRecognizers>

                            <Label
                Text="{Binding Code}"
                FontSize="16" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
